LOG_LEVEL=INFO

# ============================================
# SCHWAB POLLING
# ============================================
TIME_DELTA_DAYS=3
SCHWAB_TIMEOUT=10
ORDER_STATUS=FILLED
POLL_INTERVAL_SECONDS=5

